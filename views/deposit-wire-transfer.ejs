      <script>
         

        document.getElementById('ContinueDepost').addEventListener('click', function(e){
           e.preventDefault()
           let AccountID = (document.getElementById('AccountID').textContent).trim()
           let Account_Number = (document.getElementById('Account_Number').textContent).trim()
           let Generic_Name = document.getElementById('Generic_Name').textContent
           let Reference = (document.getElementById('Reference').textContent).trim()
           let TrxID = (document.getElementById('TrxID').textContent).trim()
           let depositAmount = document.getElementById('depositAmount').textContent
           let Currency = (document.getElementById('Currency').textContent).trim()
           let Symbol = (document.getElementById('Symbol').textContent).trim()
           let SelectedDate = (document.getElementById('SelectedDate').textContent).trim()
           let Data = {AccountID, Account_Number, Generic_Name, Reference, TrxID, depositAmount, Currency, Symbol, SelectedDate}
           $.ajax({
                  type: 'POST',
                  url: '/update-deposit-form',
                  ContentType: 'application/json',
                  data: Data,
                  success: function(data) {
                    window.location = '/deposit-succcess-page'
                  }
                })
        })
