<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:400,400i,700,900&display=swap" rel="stylesheet">
  </head>
    <style>
      body {
        text-align: center;
        padding: 40px 0;
        background: #EBF0F5;
      }
        h1 {
          color: rgb(255, 255, 0);
          font-family: "Nunito Sans", "Helvetica Neue", sans-serif;
          font-weight: 900;
          font-size: 40px;
          margin-bottom: 10px;
        }
        p {
          color: #404F5E;
          font-family: "Nunito Sans", "Helvetica Neue", sans-serif;
          font-size:20px;
          margin: 0;
        }
      i {
        color: #996515;
        font-size: 100px;
        line-height: 200px;
        margin-left:-15px;
      }
      .card {
        background: white;
        padding: 60px;
        border-radius: 4px;
        box-shadow: 0 2px 3px #C8D0D8;
        display: inline-block;
        margin: 0 auto;
      }
    </style>
    <body>
      <div class="card">
        <div style="border-radius:200px; height:200px; width:200px; background: #F8FAF5; margin:0 auto;">
          <i class="checkmark">?</i>
        </div>
        <h1>Verification needed !!</h1> 
        <p>You account registration has been successful;<br/>In order to access your account you need to verify your email.</p>
        <br>
         <p>Click on the button below to send the verification email</p>
        <button style="background-color: #996515; width: 100%; margin-top: 15px; height: 50px;" id="SendVerification"><a style="color: #fff; text-decoration: none; font-size: 17px;">Send Email</a></button>
        
      <div style="display: none;">
          <p id="AccountID"><%= Data.AccountID %></p>
          <p id="FirstName"><%= Data.FirstName %></p>
          <p id="LastName"><%= Data.LastName %></p>
          <p id="inputEmail"><%= Data.inputEmail %></p>
      </div>
      </div>
    </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    
    <script>


        function AutoSendEmail(){
          let AccountID = document.getElementById('AccountID').textContent
          let FirstName = document.getElementById('FirstName').textContent
          let LastName = document.getElementById('LastName').textContent
          let inputEmail = document.getElementById('inputEmail').textContent
          let Data = {AccountID, FirstName, LastName, inputEmail}
          $.ajax({
                  type: 'POST',
                  url: '/send-verification-mail',
                  ContentType: 'application/json',
                  data: Data,
                  success: function(data) {
                     alert(data)
                  }
                });
          
           }


           document.getElementById('SendVerification').addEventListener('click', function(e){
             e.preventDefault()
             AutoSendEmail()
           })

    </script>
</html>